<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ClienteActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/voltar2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="260dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ohno" />

    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <TextView
               android:id="@+id/textView3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#D6D6D6"
               android:gravity="center"
               android:text="Buscar cliente"
               android:textColor="@android:color/tertiary_text_light"
               android:textSize="30sp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:orientation="horizontal">

               <EditText
                   android:id="@+id/pesquisaCpf"
                   android:layout_width="248dp"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:fontFamily="sans-serif-smallcaps"
                   android:gravity="center"
                   android:hint="CPF"
                   android:inputType="number"
                   android:textColor="@android:color/black" />

               <Button
                   android:id="@+id/btnBuscarCpf"
                   android:layout_width="100dp"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="5dp"
                   android:background="@drawable/custom_buttons"
                   android:fontFamily="sans-serif-smallcaps"
                   android:text="Buscar"
                   android:textColor="@color/yellow" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginBottom="10dp"
               android:background="@android:color/transparent"
               android:gravity="center"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/outputNome"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="sans-serif-smallcaps"
                   android:text="Nome: "
                   android:textColor="@android:color/black"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/outputCpf"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="sans-serif-smallcaps"
                   android:text="CPF: "
                   android:textColor="@android:color/black"
                   android:textSize="18sp" />/>

               <TextView
                   android:id="@+id/outputTelefone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="sans-serif-smallcaps"
                   android:text="Telefone: "
                   android:textColor="@android:color/black"
                   android:textSize="18sp" />/>

               <TextView
                   android:id="@+id/textView10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="25px"
                   android:background="#D6D6D6"
                   android:fontFamily="sans-serif-smallcaps"
                   android:gravity="center"
                   android:hint="Veículo"
                   android:text="Veículo"
                   android:textColor="@android:color/tertiary_text_light"
                   android:textSize="30sp" />

               <ListView
                   android:id="@+id/listViewVeiculosConsultar"
                   android:layout_width="match_parent"
                   android:layout_height="120dp"
                   android:background="@android:color/transparent"
                   android:cacheColorHint="@android:color/transparent"
                   android:hapticFeedbackEnabled="true">

               </ListView>

               <TextView
                   android:id="@+id/textView22"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#D6D6D6"
                   android:fontFamily="sans-serif-smallcaps"
                   android:gravity="center"
                   android:text="Serviço"
                   android:textColor="@android:color/tertiary_text_light"
                   android:textSize="30sp" />

               <ListView
                   android:id="@+id/listViewServicosConsultar"
                   android:layout_width="match_parent"
                   android:layout_height="184dp" />

           </LinearLayout>
       </LinearLayout>



</LinearLayout>
