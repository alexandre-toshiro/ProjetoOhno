<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AtribuirActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/voltar2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="260dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ohno" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="358dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D6D6D6"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Buscar veículo"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pesquisaPlaca"
                    android:layout_width="263dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/arrendondamento"
                    android:ems="10"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:hint="Placa"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/btnBuscarPlaca"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_buttons"
                    android:text="Buscar" />
            </LinearLayout>

            <TextView
                android:id="@+id/outputPlacaPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Placa: "
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/outputMarcaPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Marca: "
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/outputModeloPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Modelo: "
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/outputAnoPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Ano: "
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#D6D6D6"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Buscar serviço"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/dropBoxServicos"
                    android:layout_width="256dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"

                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hapticFeedbackEnabled="false" />

                <Button
                    android:id="@+id/btnAdicionar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_buttons"
                    android:text="Adicionar" />

            </LinearLayout>

            <ListView
                android:id="@+id/listViewServicosAdicionados"
                android:layout_width="357dp"
                android:layout_height="185dp" />

            <Button
                android:id="@+id/btnEmitirOS"
                android:layout_width="203dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_buttons"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Emitir Ordem de Serviço" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>